@model BMS.Models.Borrower

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm(Html.BeginForm("Edit", "Borrower", FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.borrower_id)
        <div class="row d-flex align-items-center">
            <div class="form-group col text-center">
                <div>
                    @Html.EditorFor(model => model.borrower_image, new { htmlAttributes = new { @class = "form-control d-none" } })
                    <img src="@Url.Content(Model.borrower_image)" style="height:auto;width:200px;" id="previewImage" />
                    <input type="file" name="ImageUpload" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
                    @Html.ValidationMessageFor(model => model.borrower_image, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col">
                <div class="form-group ">
                    <span><strong>Name:</strong></span>
                    <div class="col-md-10 ">
                        @Html.EditorFor(model => model.borrower_name, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.borrower_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    <span><strong>Phone:</strong></span>
                    <div class="col-md-10 ">
                        @Html.EditorFor(model => model.borrower_phone, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.borrower_phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    <span><strong>Email:</strong></span>
                    <div class="col-md-10 ">
                        @Html.EditorFor(model => model.borrower_email, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.borrower_email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group ">
                    <span><strong>Address:</strong></span>
                    <div class="col-md-10 ">
                        @Html.EditorFor(model => model.borrower_address, new { htmlAttributes = new { @class = "" } })
                        @Html.ValidationMessageFor(model => model.borrower_address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-success" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
